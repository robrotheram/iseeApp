<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iseeapp.co.iseeapp.GameActivity$PlaceholderFragment">

    <!-- To display picture taken -->
    <RelativeLayout
        android:id="@+id/relPreview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"

        android:background="#F2F0DF"

        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Picture"
        android:layout_gravity="bottom"
        android:textColor="#FFFFFF"
        android:background="#607890"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

    <Button
        android:id="@+id/btnCapturePicture"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_gravity="left"
        android:textColor="#FFFFFF"
        android:background="#607890"
      />
        <Button
            android:id="@+id/btnSend"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Send Photo"
            android:layout_gravity="left"
            android:textColor="#FFFFFF"
            android:background="#7890A8"
            />
        <Button
            android:id="@+id/btnGoBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:layout_gravity="left"
            android:textColor="#FFFFFF"
            android:background="#A9C1D9"
            />
    </LinearLayout>

</RelativeLayout>
